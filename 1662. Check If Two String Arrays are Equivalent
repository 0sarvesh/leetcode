class Solution {
    public boolean arrayStringsAreEqual(String[] word1, String[] word2) {
        StringBuilder sb = new StringBuilder();
        StringBuilder sb1 = new StringBuilder();//has some additional methods to use string
        for(String var:word1){
            sb1.append(var);//appends to sb1
        }
        for(String var1:word2){
            sb.append(var1);//same
        }
        return sb1.toString().equals(sb.toString());//stringbuilder obj should be converted to string
    }
}
