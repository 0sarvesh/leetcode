class Solution {

    public String restoreString(String s, int[] indices) {



     int len = s.length();

     StringBuilder sb = new StringBuilder("");// inbuild function to use append string function 

     char [] ar = new char[len];//char array

     for(int i = 0;i<len ;i++){

         ar[indices[i]]= s.charAt(i);



     }

     sb.append(ar);

     return sb.toString();//converts to string



    }

